{
  "name": "opus67",
  "displayName": "OPUS 67",
  "description": "The AI Engine That Ships Code - 141 skills, 83 MCPs, 30 modes, 107 agents",
  "version": "1.0.0",
  "publisher": "gicm",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "opus67",
    "mcp",
    "skills",
    "agents",
    "cursor",
    "coding assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opus67.switchMode",
        "title": "OPUS 67: Switch Mode"
      },
      {
        "command": "opus67.loadSkill",
        "title": "OPUS 67: Load Skill"
      },
      {
        "command": "opus67.spawnAgent",
        "title": "OPUS 67: Spawn Agent"
      },
      {
        "command": "opus67.showDashboard",
        "title": "OPUS 67: Show Dashboard"
      },
      {
        "command": "opus67.refresh",
        "title": "OPUS 67: Refresh"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opus67",
          "title": "OPUS 67",
          "icon": "resources/icons/opus67.svg"
        }
      ]
    },
    "views": {
      "opus67": [
        {
          "id": "opus67.modes",
          "name": "Modes (30)"
        },
        {
          "id": "opus67.skills",
          "name": "Skills (141)"
        },
        {
          "id": "opus67.agents",
          "name": "Agents (107)"
        }
      ]
    },
    "configuration": {
      "title": "OPUS 67",
      "properties": {
        "opus67.defaultMode": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "ultra",
            "think",
            "build",
            "vibe",
            "light",
            "creative",
            "data",
            "audit",
            "swarm"
          ],
          "description": "Default OPUS 67 mode"
        },
        "opus67.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show OPUS 67 mode in status bar"
        },
        "opus67.autoInjectContext": {
          "type": "boolean",
          "default": true,
          "description": "Auto-inject skill context into AI prompts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gicm-dev/gicm.git",
    "directory": "packages/opus67-vscode"
  },
  "license": "MIT"
}

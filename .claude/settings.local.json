      "Bash(git -C \"C:\\Users\\mirko\\OneDrive\\Desktop\\gICM\" push origin main)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(gh auth status:*)",
      "Bash(done)",
      "Bash(where gh:*)",
      "Bash(ls:*)",
      "Bash(env)",

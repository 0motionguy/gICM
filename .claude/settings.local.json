  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/session-start.js\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/opus67-auto-detect.js\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/pre-bash.js\"",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Read|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/opus67-pre-read.js\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/opus67-pre-mcp.js\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/opus67-pre-agent.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/post-write.js\"",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:/Users/mirko/OneDrive/Desktop/gICM/.claude/hooks/post-bash.js\"",
            "timeout": 30
          }
        ]
      }
    ]
